pipeline {
  agent any
  stages {
    stage('Install dependencies') {
      steps {
        sh 'cd frontend/ | yarn install'
      }
    }
  stage('Quality checks') {
    steps {
      sh 'cd frontend/ | npx eslint src'
      sh 'yarn run test:nowatch'
      }
    }
  stage('Build') {
    steps {
      sh 'cd frontend/ | yarn build'
      }
    }
  }
}